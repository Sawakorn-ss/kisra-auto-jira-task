{
  "name": "kisra-auto-jira-task",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for the Kisra Auto Jira Task product",
  "scripts": {
    "dev:frontend": "npm --prefix apps/frontend run dev",
    "dev:backend": "npm --prefix apps/backend run start:dev",
    "build:frontend": "npm --prefix apps/frontend run build",
    "build:backend": "npm --prefix apps/backend run build",
    "lint": "npm --prefix apps/frontend run lint && npm --prefix apps/backend run lint",
    "format": "npm --prefix apps/frontend run format && npm --prefix apps/backend run format"
  },
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "bcrypt": "^6.0.0",
    "jira.js": "^5.2.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38"
  }
}
